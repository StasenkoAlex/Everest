    <div class="modal__top clear">
      <div class="modal__top-item modal__top-item--name">
        {{title}}
      </div>
      <div class="modal__top-item modal__top-item--call">Заказать звонок</div>
      <div class="modal__top-item modal__top-item--tel">8 800 707 09 10</div>
      <button class="modal__top-item modal__top-item--close js-modal-close">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40">
          <path d="M40,32.2c0,0.9-0.3,1.7-0.9,2.3l-4.6,4.6c-0.6,0.6-1.4,0.9-2.3,0.9c-0.9,0-1.7-0.3-2.3-0.9L20,29.2l-9.9,9.9 C9.5,39.7,8.7,40,7.8,40c-0.9,0-1.7-0.3-2.3-0.9l-4.6-4.6C0.3,33.8,0,33.1,0,32.2c0-0.9,0.3-1.7,0.9-2.3l9.9-9.9l-9.9-9.9 C0.3,9.5,0,8.7,0,7.8c0-0.9,0.3-1.7,0.9-2.3l4.6-4.6C6.2,0.3,6.9,0,7.8,0c0.9,0,1.7,0.3,2.3,0.9l9.9,9.9l9.9-9.9 C30.5,0.3,31.3,0,32.2,0c0.9,0,1.7,0.3,2.3,0.9l4.6,4.6C39.7,6.2,40,6.9,40,7.8c0,0.9-0.3,1.7-0.9,2.3L29.2,20l9.9,9.9 C39.7,30.5,40,31.3,40,32.2z"/>
        </svg>
      </button>
    </div>
    
    {{#if gallery}}
    <div class="gallery__slider modal__gallery js-gallery">
      {{#each gallery}}
      <div class="gallery__slider-item">
        <div class="row">
          {{#each this.slide}}
            <div class="{{#if this.single}}col-lg-16{{else}}col-lg-8{{/if}} gallery__slider-col">
              <div class="gallery__slider-frame">
                <img class="gallery__slider-img" src="img/projects/{{this.image}}" alt=""/>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
    
    <div class="modal__content">
      <div class="container--flex modal__advantages-list">
        <div class="modal__advantages-item"><img src="img/projects/advantages1.png" alt="" class="modal__advantages-img"></div>
        <div class="modal__advantages-item"><img src="img/projects/advantages2.png" alt="" class="modal__advantages-img"></div>
        <div class="modal__advantages-item"><img src="img/projects/advantages3.png" alt="" class="modal__advantages-img"></div>
        <div class="modal__advantages-item"><img src="img/projects/advantages4.png" alt="" class="modal__advantages-img"></div>
      </div>
      
      {{#if description}}
        <div class="modal__description">{{{description}}}</div>
      {{/if}}
      
      <div class="modal__form container--flex js-modal-form">
        <input type="text" class="modal__input" name="user_name" placeholder="Ваше имя" required>
        <input type="text" class="modal__input" name="user_tel" placeholder="Ваш телефон" required>
        <input type="text" class="modal__variant js-modal-variant">
        <input type="submit" class="btn modal__submit" value="Узнать подробности">
      </div>
    </div>
  </div>
  
</div>